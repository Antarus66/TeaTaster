{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "airbnb/base",
    "airbnb/hooks",
    "plugin:react/recommended",
    "plugin:sonarjs/recommended",
    "plugin:promise/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended"
  ],
  "plugins": [
    "sonarjs",
    "promise",
    "import",
    "modules-newline",
    "react",
    "react-hooks"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "no-unused-vars": "off"
  }
}
